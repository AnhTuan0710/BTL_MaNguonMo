package MiuMiuShop.Controller.User;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import MiuMiuShop.Service.User.HomeServiceImpl;

@Controller
public class LoaiSanPhamController {
	
	@Autowired
	HomeServiceImpl homeService;
	@RequestMapping(value = "/loai-san-pham/{id}")
	public ModelAndView SanPham(@PathVariable String id)
	{
		ModelAndView mv = new ModelAndView("user/sanpham/loaisanpham");
		mv.addObject("maLoaiSanPham", id);
		mv.addObject("sanPham", homeService.GetDataSanPham());
		return mv;
	}
}

