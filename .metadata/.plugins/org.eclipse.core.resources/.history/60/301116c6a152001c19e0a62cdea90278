package MiuMiuShop.Controller.User;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import MiuMiuShop.Service.User.LoaiSanPhamImpl;

@Controller
public class LoaiSanPhamController extends BaseController{
	
	@Autowired
	private LoaiSanPhamImpl loaiSanPhamSevice;
	
	@RequestMapping(value = "/loai-san-pham/{id}")
	public ModelAndView SanPham(@PathVariable String id)
	{
		_mvShare.setViewName("user/sanpham/loaisanpham");
		_mvShare.addObject("tatCaSanPhamCungLoai", loaiSanPhamSevice.GetDataSanPhamByID(Integer.parseInt(id)));
		_mvShare.addObject("tatCaSanPhamCungLoaiTrong1Trang", loaiSanPhamSevice.GetDataSanPhamByID(Integer.parseInt(id)));
		return _mvShare;
	}
}

